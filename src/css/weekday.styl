.{css-prefix}month-week-item
    .{css-prefix}weekday
        border-top: 1px solid #ccc

        .{css-prefix}weekday-grid
            overflow-y: hidden

        .{css-prefix}weekday-events
            overflow-y: hidden

+prefix-classes(weekday)
    .container,
    .grid,
    .grid-line
        height: 100%
        min-height: inherit

    .grid
        position: absolute
        width: 100%
        overflow-y: scroll

    .container
        position: relative
        &>div
            height: 100%

    .grid-line
        margin-left: -1px
        border-left: 1px solid #ccc
        padding: 2px 0
        box-sizing: content-box
        float: left
        height: 100%

    .events
        pos(0px, 0px)
        wh(100%, 100%)
        position: absolute
        font-size: 12px
        overflow-y: scroll

    .event-block
        position: absolute

    .event
        position: relative
        margin: 0 3px 0 2px
        cursor: pointer

    .event span,
    .event-time span
        padding-left: 3px
        line-height: 18px

    .event-title
        display: block
        white-space: nowrap
        overflow: hidden
        text-overflow: ellipsis

    .exceed-right .event
        margin-right: 0

    .exceed-right .resize-handle
        display: none

    .resize-handle
        position: absolute
        top: 0
        right: 0
        width: 6px
        background-position: 3px center
        cursor: col-resize

    .filled
        background-color: #e8e8e8

+prefix-classes(css-prefix)
    .left
        wh(64px, 100%)
        float: left
        border-right: 1px solid #ccc
        box-sizing: border-box
        text-align: right
        padding: 10px 15px
        font-size: 12px

    .left span
        display: block
        padding: 3px 5px 0 0

    .right
        height: 100%
        background-color: #fff
        margin-left: 64px
        overflow-y: scroll
        position: relative
