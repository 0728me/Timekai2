+prefix-classes(css-prefix)
    // Clearing bootstrap's box-sizing css
    .layout *,
    .layout *:before,
    .layout *:after
        vendor('box-sizing', content-box);

    // Related with user interaction
    .dragging
        cursor: move;

    .resizing
        cursor: row-resize;

    .resizing-x
        cursor: col-resize;

    .hidden
        display: none !important;

    .invisible span
        visibility: hidden;

    .clear
        clearfix()

    // display layout
    .display-table
        width: 100%
        display: table

    .display-table-row
        display: table-row
        &:last-child
            .scroll-y
                border-bottom: 0

    .display-table-cell
        display: table-cell

    .scroll-y
        border-bottom: 2px solid #ccc
        overflow-y: scroll;

    .dot
        display: inline-block
        position: relative
        top: -1px
        content: ''
        width: 7px
        height: 7px
        border-radius: 50%

// Drag handle
.handle-x
    background-position: center center;
    background-repeat: no-repeat;
    background-image: url(handle-x.png);

.handle-y
    background-position: center center;
    background-repeat: no-repeat;
    background-image: url(handle-y.png);

// For Retina display
@media only screen and (-moz-min-device-pixel-ratio: 1.5), only screen and (-o-min-device-pixel-ratio: 3/2), only screen and (-webkit-min-device-pixel-ratio: 1.5), only screen and (min-devicepixel-ratio: 1.5), only screen and (min-resolution: 1.5dppx)
    .handle-x
        background-image: url(handle-x@2x.png);
        background-size: 8px 4px;

    .handle-y
        background-image: url(handle-y@2x.png);
        background-size: 4px 8px;
