// Variables
// default prefix
css-prefix = '/* @echo CSS_PREFIX */'
// Dayname
dayname = css-prefix + 'dayname-'
// Allday
allday = css-prefix + 'allday-'
weekday = css-prefix + 'weekday-'
// Time
timegrid = css-prefix + 'timegrid-'
time = css-prefix + 'time-'
// Month
month = css-prefix + 'month-'

// services
milestone = css-prefix + 'milestone-'
taskview = css-prefix + 'task-'


// Functions
wh(w, h)
    width: w
    height: h

pos(top, left)
    top: top
    left: left

mpzero()
    margin: 0
    padding: 0

vendor(prop, args)
    -webkit-{prop} args
    -moz-{prop} args
    {prop} args

flex()
    display: -ms-flexbox
    display: -webkit-flex
    display: flex

flex-justify-content(val)
    -webkit-justify-content: val
    justify-content: val

flex-align-items(val)
    -webkit-align-items: val
    align-items: val

clearfix()
    zoom: 1;
    &:after
        content: '';
        display: block;
        clear: both;
    
