+prefix-classes(timegrid)
    .container
        height: 100%
        position: relative
        overflow: hidden
        overflow-y: scroll

    .container-split
        height: 100%
        position: relative
        overflow: hidden

    .left
        position: absolute
        font-size: 12px
        background-color: #fafafa
        wh(77px, auto)

    .hour
        height: 37px
        position: relative
        border-right: 1px solid #ddd
        color: #555
        box-sizing: border-box
        &:first-child span
            display: none
        &:last-child
            border-bottom: none

    .hour span
        position: absolute
        top: -11px
        left: 0
        right: 7px
        text-align: right
        line-height: 25px

    .right
        position: relative
        margin-left: 77px

    .h-grid
        background-color: #fff

    .gridline
        height: 37px
        border-bottom: 1px solid #eee
        box-sizing: border-box
        &:last-child
            border-bottom: none

    .gridline:after
        content: ''
        display: block
        height: 18px
        border-bottom: 1px dotted #f9f9f9

    .events
        position: absolute
        wh(100%, 100%)
        pos(0, 0)
        cursor: pointer

    // Hourmarker
    .hourmarker
        position: absolute
        width: 100%
        z-index: 98

    .hourmarker-wrap
        position: relative

    .hourmarker-line
        position: absolute
        background-color: #135de6
        height: 1px
        left: 0
        right: 0

    .hourmarker-time
        position: absolute
        width: 52px
        left: -60px
        top: -6px
        line-height: 12px
        font-size: 11px
        text-align: right
        color: #135de6

    // Todaymarker
    .todaymarker
        position: absolute
        text-indent: -9999px
        wh(9px, 9px)
        background-color: #135de6
        margin: -4px 0 0 -5px
        border-radius: 50%
        z-index: 99

+prefix-classes(time)
    .date
        position: absolute
        height: 100%
        margin-left: -1px
        border-right: 1px solid #ddd
        box-sizing: content-box
        &:last-child
            border-right: none
            margin: 0
            // last creation guide element
            .event,
            .guide-creation
                left: 0px

    .date-event-block-wrap
        position: relative
        margin-right: 10px
        height: 100%

    .date-event-block
        position: absolute
        right: 0px

    .date-event-block-pending
        opacity: 0.7

    .event
        position: relative
        left: 1px
        height: 100%
        font-size: 12px
        overflow: hidden
        border-left-width: 3px
        border-left-style: solid

    .resize-handle
        position: absolute
        right: 0px
        bottom: 0px
        left: 0px
        text-align: center
        color: #fff
        cursor: row-resize
        background-position: center 7px

    // Guide element
    .guide-creation
        position: absolute
        right: 2px
        left: 1px
        background-color: #7cafc2
        opacity: 0.8

    .guide-move,
    .guide-resize
        .event,
        .resize-handle
            opacity: 0.8
            z-index: 97

    .guide-creation-label
        padding-left: 1px
        color: #fff
        cursor: default

    .guide-bottom
        position: absolute
        bottom: 0;


+prefix-classes(split-timegrid)
    .container
        height: 100%
        position: relative
        overflow: hidden

    .left
        position: absolute
        wh(30px, auto)

    .hour
        height: 25px
        border-right: 1px solid #f1f1f1
        color: #777
        text-align: right
        &:last-child
            border-bottom: none

    .hour span
        line-height: 15px
        padding-right: 5px

    .right
        position: relative
        margin-left: 30px

    .h-grid
        background-color: #fff

    .gridline
        height: 25px
        border-bottom: 1px solid #f1f1f1
        &:last-child
            border-bottom: none

    .events
        position: absolute
        wh(100%, 100%)
        pos(0, 0)

    .schedule
        border: 1px solid #ff0000
        position: absolute
        width: 100%
        box-sizing: border-box
        background: rgba(245, 215, 215, 0.3)
