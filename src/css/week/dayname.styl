.{css-prefix}holiday-sun
    color: #f44336

.{css-prefix}holiday-sat
    color: #000

.{css-prefix}dayname
    top: 0;
    position: absolute;
    height: 42px;
    margin-left: -1px
    line-height: 42px
    text-align: left
    font-size: 13px
    padding-left: 5px

    .{css-prefix}dayname-date
        font-size: 26px
        line-height: 42px

    &.{css-prefix}today
        font-weight: bold
        color: #135de6

+prefix-classes(dayname)
    .container
        height: 42px
        border-bottom: 1px solid #ddd
        background-color: #fff;
        padding-right: 15px // for vertical scrollbar

    .leftmargin
        position: relative
        margin-left: 77px 
