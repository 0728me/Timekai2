.{css-prefix}holliday
    color: red

.{css-prefix}dayname
    top: 0;
    position: absolute;
    height: 40px
    margin-left: -1px
    border-left: 1px solid #ccc
    background-color: #fff
    line-height: 20px

+prefix-classes(dayname)
    .container
        position: relative
        margin-left: 60px
        height: 40px
        background-color: #eee

    .label
        padding-left: 7px
        font-size: 1.2em

    .date
        padding-left: 7px
        font-size: 1.3em
        font-weight: bold

