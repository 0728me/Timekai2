.{css-prefix}month
    height: 100%

+prefix-classes(month)
    .dayname
        wh(100%, 38px)
        position: absolute
        font-size: 13px
        border-top: 1px solid #ddd

    .dayname-item
        height: 100%
        padding-right: 6px
        line-height: 38px
        text-align: right

    .weeks
        padding-top: 20px
        height: 100%

    .week-item
        position: relative
        background-color: #fff
        overflow: hidden
        &>div
            height: 100%

    .more
        background-color: #fff
        height: inherit
        min-width: 200px
        min-height: 150px
        border: 1px solid #ddd

    .more-title
        padding: 0 10px
        height: 28px
        line-height: 28px
        font-weight: bold
        font-size: 14px
        background: #f4f4f4
        border-bottom: 1px solid #ddd

    .more-close
        float: right
        outline: 0
        background none
        border: 0

    .more-list
        height: calc(100% - 29px)
        padding: 10px
        overflow-y: auto

    .more-event
        margin: 2px
        padding: 0 3px
        font-size: 12px
        line-height: 18px
        cursor: pointer
        display: block
        overflow: hidden
        white-space: nowrap
        text-overflow: ellipsis

    .guide-block
        position: absolute
        margin-top: 2px

    .guide
        position: relative
        margin: 0 10px
        padding-left: 3px
        line-height: 18px
        opacity: 0.9
        overflow: hidden
        white-space: nowrap
        text-overflow: ellipsis

    .move-guide
        font-size: 12px
        line-height 18px

    .exceed-left .guide
        margin-left: 0px

    .exceed-right .guide
        margin-right: 0px

    .exceed-right .guide-handle
        display: none

    .guide-handle
        position: absolute
        top: 0
        right: 3px
        width: 6px
        background-position: 3px center
        cursor: col-resize
