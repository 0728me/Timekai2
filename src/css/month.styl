.{css-prefix}month
    height: 100%

+prefix-classes(month)
    .dayname
        wh(100%, 19px)
        background-color: #fff
        font-size: 0.9em
        position: absolute
        z-index: 1
        border-bottom: 1px solid #ccc

    .dayname-item
        border-left: 1px solid #ccc
        margin-left: -1px

    .weeks
        padding-top: 20px
        height: 100%

    .week-item
        border-bottom: 1px solid #ccc
        position: relative
        background-color: #fff

