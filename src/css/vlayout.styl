+prefix-classes(css-prefix)
    .vlayout-container
        position: relative

    .splitter
        height: 3px
        background-color: #ddd
        border-top: 1px solid #eee
        border-bottom: 1px solid #ccc
        cursor: row-resize

    .splitter-focused
        height: 5px
        background-color: #ffa9a9
        border: none

    .splitter-guide
        position: absolute
        wh(100%, 5px)
        border: none
        background-color: #ff4545

