+prefix-classes(freebusy)
    // Common
    .container
        position: relative
        border: 1px solid #ddd

    .controller
        position: absolute
        top: 0
        left: 0
        right: 0

    .leftmargin
        position: relative
        height: 100%
        border-left: 1px solid #ddd

    // 격자선
    .grid
        position: relative
        wh(100%, 100%)

    .gridline
        position: absolute
        height: 100%
        border-left: 1px solid #ddd
        text-align: center

    .gridline-inner
        position: absolute
        bottom: 0
        background-color: #f9f9f9;
        width: 1px;
        left: 50%;

    .header
        background-color: #fff
        color: #666

    .gridline-last > div
        margin-right: 1px

    // 사용자 목록, 일정표 영역
    .chart
        position: absolute
        border-top: 1px solid #ddd
        width: 100%

    .item
        border-bottom: 1px solid #ddd

    .name
        position: absolute
        left: 0

    .block-container
        position: relative
        height: 100%;
        border-left: 1px solid #ddd

    .block
        position: absolute
        top: -1px 
        bottom: -1px
        z-index: 1

    .fill
        height: 100%
        background: rgba(85, 85, 85, 0.1)
        border: 1px solid #cccccc

    // 추천일정 영역
    .recommends
        position: absolute
        width: 100%
        top: 0
        bottom: -1px

    .recommend-block
        position: absolute
        height: 100%
        border: 2px dashed #135de6
        z-index: 2

    // 선택 효과 영역
    .selection
        position: absolute
        width: 100%
        top: 0
        bottom: -1px
        z-index: 3

    .select
        position: absolute
        background: rgba(19, 93, 230, 0.5)
        height: 100%
        border: 1px solid #789de1

    // 선택 효과 영역
    .selection-over
        position: absolute
        width: 100%
        top: 0
        bottom: -1px
        z-index: 4

    .select-over
        position: absolute
        border: 1px solid #135de6
        height: 100%
        opacity: 0.5
