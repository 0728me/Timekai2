.{css-prefix}minicalendar
    padding: 19px 9px 18px

    table
        width: 100%
        font-size: 11px
        table-layout: fixed
        border-collapse: separate
        border-spacing: 0 2px

    caption,
    th,
    td,
    button
        mpzero()
        font-size: 11px
        border: none

    th,
    td
        height: 20px
        margin: 1px 0
        text-align: center

    button
        cursor: pointer
        width: 20px
        outline: none
        color: #000

    // Disable IE button shifting during click
    button > div
        position: relative
        line-height: 20px
        width: 15px
        margin: 0 auto

    // 헤더영역
    caption
        position: relative
        margin-bottom: 16px
        height: 15px
        line-height: 15px
        text-align: center

    // 일자표기영역
    tbody
        button
            display: block
            width: 20px
            margin: 0 auto
            height: 100%
            text-align: center

+prefix-classes(minicalendar)
    .date,
    .nav
        background-color: transparent

    button.nav
        position: absolute
        font-size: 9px
        width: 15px
        line-height: 15px
        top: -2px

        &.prev
            left: 5px
        &.next
            right: 5px

    .title
        color: #333
        font-weight: bold
        font-size: 13px

    .other-month
        button
            color: #ccc !important

    .holiday-sun
        color: #f44336
        button
            color: #f44336

    .holiday-sat
        color: #3692f2
        button
            color: #3692f2

    .focused
        background-color: #eee

    .selected
        background-color: rgba(19, 93, 230, 0.1);

    .marked
        div
            border-bottom: 1px solid #777

    .today
        button
            background-color: #135de6
            border-radius: 50%
            color: #fff
