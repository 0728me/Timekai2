.{css-prefix}minicalendar
    padding: 10px 11px 10px

    table
        width: 100%
        font-size: 11px
        table-layout: fixed
        border-collapse: separate
        border-spacing: 0 4px

    caption,
    th,
    td,
    button
        mpzero()
        font-size: 11px
        border: none

    th,
    td
        height: 17px
        margin: 1px 0
        text-align: center

    button
        cursor: pointer
        width: 17px
        outline: none
        border-radius: 0
        color: #000

    // Disable IE button shifting during click
    button > div
        position: relative
        height: 17px

        > span
            display: block
            line-height: 17px
            height: 17px
            width: 12px
            margin: 0 auto

    // 헤더영역
    caption
        position: relative
        margin-bottom: 9px
        height: 15px
        line-height: 23px 
        text-align: center

    // 일자표기영역
    tbody
        button
            display: block
            width: 17px
            margin: 0 auto
            height: 17px
            text-align: center

+prefix-classes(minicalendar)
    .date,
    .nav
        background-color: transparent

    button.nav
        position: absolute
        font-size: 9px
        width: 15px
        line-height: 15px
        top: -2px

        &.prev
            left: 5px
        &.next
            right: 5px

    .title
        color: #333
        font-weight: bold
        font-size: 13px

    .other-month
        button
            color: #bbb

    .holiday-sun
        color: #f44336

        button
            color: #f44336

        &.other-month button
            color: #f3acac

    .focused
        background-color: rgba(19, 93, 230, 0.1);


    .single-focused
        .focused
            background: none

            button
                background-color: rgba(19, 93, 230, 0.1);

    // .selected
    // currently not using selected feature

    .marked
        span
            border-bottom: 1px solid #777

    .today
        button
          > div
              background-color: #135de6
              border-radius: 50%
              color: #fff

    .prev
        &:before
            content: '<'

    .next
        &:before
            content: '>'
