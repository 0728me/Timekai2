+prefix-classes(taskview)
    .container
        height: 100%

    .left
        wh(59px, 100%)
        float: left
        text-align: right
        color: #777
        border-right: 1px solid #ccc

    .left span
        display: block;
        padding: 3px 5px 0 0

    .right
        position: relative
        background-color: #fff
        margin-left: 60px
        height: 100%
        overflow-y: scroll

    .day
        position: absolute
        background-color: #fff
        margin-left: -1px
        border-left: 1px solid #ccc
        height: 100%
        
    .day-wrap
        margin: 2px
        padding: 0
        overflow: hidden

    .duedate-class strong
        font-weight: normal

    .list
        margin: 0
        padding: 0
        list-style: none

    .item
        list-style: none
        white-space: nowrap
        overflow hidden
