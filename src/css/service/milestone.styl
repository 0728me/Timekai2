+prefix-classes(milestone)
    .container
        height: 100%

    .layout > div
        border-top: 1px solid #ccc
        &:first-child
            border-top: 0;

    .left
        color: #777

    .left span
        display: block
        padding: 3px 5px 0 0

    .day
        position: absolute
        background-color: #fff
        margin-left: -1px
        border-left: 1px solid #ccc
        height: 100%

    .list
        margin: 2px
        padding: 0
        overflow: hidden

    .item
        font-size: 11px
        list-style: none
        white-space: nowrap
        overflow hidden
