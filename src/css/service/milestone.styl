+prefix-classes(milestone)
    .container
        height: 100%

    .layout > div
        border-top: 1px solid #ccc
        &:first-child
            border-top: 0;

    .left
        color: #777

    .left span
        display: block
        padding: 3px 5px 0 0

    .right
        overflow-y: hidden;

    .day-grid-wrap
        overflow-y: scroll
        width: 100%
        height: 100%
        position: absolute

    .day-grid
        border-left: 1px solid #ccc
        float: left
        margin-left: -1px
        height: 100%

    .day-scroll
        height: 100%
        overflow-y: scroll
        position: relative

    .day
        position: absolute
        margin-left: -1px
        height: 100%

    .date-today
        background: rgba(218, 229, 249, .3)
        min-height: 100%

    .list
        margin: 0
        padding: 2px
        overflow: hidden

    .item
        font-size: 11px
        list-style: none
        white-space: nowrap
        overflow hidden
