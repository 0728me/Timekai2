<div class="{{CSS_PREFIX}}weekday-grid">
{{#each dates ~}}
    <div class="{{CSS_PREFIX}}weekday-grid-line {{#if isToday}} {{CSS_PREFIX}}today{{/if}}" style="width:{{@root.width}}%;left:{{multiply @root.width @index}}%;"></div>
{{/each ~}}
</div>
<div class="{{CSS_PREFIX}}weekday-creation"></div>
<div class="{{CSS_PREFIX}}weekday-events">
    <!-- weekday-events 높이를 하단 패딩까지 확보하기 위한 빈 div -->
    <div class="{{CSS_PREFIX}}weekday-events-height-span" style="height:{{contentHeight}}px"></div>
    {{#each matrices ~}}
    {{#each this ~}} {{! matrix }}
    {{#each this ~}} {{! column }}
    {{#if this ~}} {{! viewmodel }}
    <div data-id="{{stamp model}}"
        class="{{CSS_PREFIX}}weekday-event-block
            {{#if exceedLeft}} {{CSS_PREFIX}}weekday-exceed-left{{/if}}
            {{#if exceedRight}} {{CSS_PREFIX}}weekday-exceed-right{{/if}}"
        style="top:{{multiply top @root.eventBlockHeight}}px;
                left:{{multiply left @root.width}}%;
                width:{{multiply width @root.width}}%;
                height:{{@root.eventBlockHeight}}px;
                margin-bottom:{{@root.eventBlockGutter}}px">
        <div class="{{CSS_PREFIX}}weekday-event" style="height:{{@root.eventHeight}}px;color:{{model.color}};background-color:{{model.bgColor}}; border-color:{{model.borderColor}}">
            <span class="{{CSS_PREFIX}}weekday-event-title">{{{allday-tmpl model}}}</span>
            <span class="{{CSS_PREFIX}}weekday-resize-handle handle-y">&nbsp;</span>
        </div>
    </div>
    {{/if ~}}
    {{/each ~}}
    {{/each ~}}
    {{/each ~}}
</div>
