<div class="{{CSS_PREFIX}}timegrid-left">
    {{#each hours ~}}
        <div class="{{CSS_PREFIX}}timegrid-hour
            {{CSS_PREFIX}}timegrid-hour-{{this}}
            {{#fi @root.currentHour '===' this}}{{CSS_PREFIX}}invisible{{/fi}}"><span>{{this}}ì‹œ</span></div>
    {{/each ~}}
</div>
<div class="{{CSS_PREFIX}}timegrid-right">
    <div class="{{CSS_PREFIX}}timegrid-h-grid">
        {{#each hours ~}}
        <div class="{{CSS_PREFIX}}timegrid-gridline"></div>
        {{/each ~}}
    </div>
    <div class="{{CSS_PREFIX}}timegrid-events">
        <div class="{{CSS_PREFIX}}timegrid-events-container"></div>
    </div>
    <div class="{{CSS_PREFIX}}timegrid-hourmarker" style="top:{{hourmarkerTop}}%">
        <div class="{{CSS_PREFIX}}timegrid-hourmarker-wrap">
            <div class="{{CSS_PREFIX}}timegrid-hourmarker-line"></div>
            <div class="{{CSS_PREFIX}}timegrid-hourmarker-time">{{hourmarkerText}}</div>
            <div class="{{CSS_PREFIX}}timegrid-todaymarker" style="left:{{todaymarkerLeft}}%;{{#unless todaymarkerLeft}}display:none{{/unless}}">today</div>
        </div>
    </div>
</div>
