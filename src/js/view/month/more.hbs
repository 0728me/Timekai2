<div class="{{CSS_PREFIX}}month-more" style="width:100%">
    <div class="{{CSS_PREFIX}}month-more-title">
        <span class="{{CSS_PREFIX}}month-more-title-date">{{{monthMoreTitleDate-tmpl date}}}</span>
        <button type="button" class="{{CSS_PREFIX}}month-more-close">{{{monthMoreClose-tmpl}}}</button>
    </div>
    <div class="{{CSS_PREFIX}}month-more-list">
        {{#each schedules}}
        {{#fi model.isAllDay '||' hasMultiDates ~}}
        <div data-id="{{stamp model}}"
             class="{{CSS_PREFIX}}month-more-schedule {{CSS_PREFIX}}month-more-allday"
             style="background-color:{{model.bgColor}}; color:{{model.color}}; border-left:3px solid {{model.borderColor}}">
            {{model.title}}
        </div>
        {{else}}
        <div data-id="{{stamp model}}"
             class="{{CSS_PREFIX}}month-more-schedule {{CSS_PREFIX}}weekday-schedule {{CSS_PREFIX}}weekday-schedule-time">
            <span class="{{CSS_PREFIX}}weekday-schedule-bullet" style="background:{{model.color}}"></span>
            <span class="{{CSS_PREFIX}}weekday-schedule-title" style="color:#000">{{{time-tmpl model}}}</span>
        </div>
        {{/fi}}
        {{/each}}
    </div>
</div>
