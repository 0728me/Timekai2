<div class="schedule-view-task-left">
    <span>업무</span>
</div>
<div class="schedule-view-task-right schedule-view clear">
{{#each events ~}}
<div class="schedule-view-task-day" 
    style="width:{{@root.width}}%;left:{{multiply @root.width @index}}%;
        min-height:{{@root.minHeight}}px;height:{{@root.height}}px;">
    <div class="schedule-view-task-day-wrap">
        {{! 출근전 }}
        {{#if morning ~}}
        <h6 style="line-height:{{@root.lineHeight}}px">출근 전</h6>
        <ul>
            {{#each morning.items ~}}
            <li data-title="{{model.title}}" class="schedule-view-task-item" 
            style="line-height:{{@root.lineHeight}}px;color:{{model.color}}">{{model.title}}</li>
            {{/each ~}}
        </ul>
        {{/if ~}}

        {{! 점심전 }}
        {{#if lunch ~}}
        <h6 style="line-height:{{@root.lineHeight}}px">점심 전</h6>
        <ul>
            {{#each lunch.items ~}}
            <li data-title="{{model.title}}" class="schedule-view-task-item" 
            style="line-height:{{@root.lineHeight}}px;color:{{model.color}}">{{model.title}}</li>
            {{/each ~}}
        </ul>
        {{/if ~}}

        {{! 퇴근전 }}
        {{#if evening ~}}
        <h6 style="line-height:{{@root.lineHeight}}px">퇴근 전</h6>
        <ul>
            {{#each evening.items ~}}
            <li data-title="{{model.title}}" class="schedule-view-task-item" 
            style="line-height:{{@root.lineHeight}}px;color:{{model.color}}">{{model.title}}</li>
            {{/each ~}}
        </ul>
        {{/if ~}}
    </div>
</div>
{{/each ~}}
</div>
